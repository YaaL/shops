{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base",
        "plugin:chai-friendly/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
      "chai-friendly"
    ],
    "rules": {
      "import/extensions": [ "error", "always", { "ignorePackages": true } ],
      "no-console": "off",
      "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    }
}
